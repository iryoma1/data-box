<body id="top">

  <div id="topcontents">
    <div class="inner">

      <header>
        <div class="inner">
        <h1 id="logo"><%= link_to image_tag("logo.png"), "/" %></h1>
        </div>
      </header>
 
      <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
        <div class='form-wrap'>
          <div class='form-header'>
            <h1 class='form-header-text'>
               会員情報入力
            </h1>
          </div>

          <%#= render 'shared/error_messages', model: f.object %>

          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">Company</label>
              <%# <span class="indispensable">必須</span> %>
            </div>
            <%= f.text_area :name, class:"input-default", id:"nickname", placeholder:"会社名を入力して下さい", maxlength:"40" %>
            </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">Email</label>
              <%# <span class="indispensable">必須</span> %>
            </div>
            <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">Password</label>
              <%# <span class="indispensable">必須</span> %>
            </div>
            <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
            <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">Password</label>
              <%# <span class="indispensable">必須</span> %>
            </div>
            <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
          </div>
          <div class='register-btn'>
            <%= f.submit "会員登録" ,class:"register-red-btn" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <!--スマホ用更新情報　800px以下-->
  <script type="text/javascript">
  if (OCwindowWidth() <= 800) {
    open_close("newinfo_hdr", "newinfo");
  }
  </script>

  <!--メニューの開閉処理条件設定　800px以下-->
  <script type="text/javascript">
  if (OCwindowWidth() <= 800) {
    open_close("menubar_hdr", "menubar-s");
  }
  </script>
</body>

