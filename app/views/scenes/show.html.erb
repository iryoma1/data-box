<body>

<div class="inner">

<header>
<div class="inner">
	<h1 id="logo"><%= link_to image_tag("logo.png"), "/" %></h1>
</div>
</header>

<!--PC用（801px以上端末）メニュー-->
<nav id="menubar">
				<ul class="inner">
					<% if user_signed_in? %>
						<li><%= link_to company_path do%>
							<span>my page</span>マイページ
						<%end%></li>
						<li><%= link_to destroy_user_session_path, method: :delete do%>
							<span>log out</span>ログアウト
						<%end%></li>
					<% else %>
						<li><%= link_to new_user_session_path do%>
							<span>log in</span>ログイン
						<%end%></li>
						<li><%= link_to new_user_registration_path do%>
							<span>sign up</span>新規登録
						<%end%></li>
						<li><%= link_to "#" do%>
							<span>service</span>サービス案内
						<%end%></li>
					<% end %>
				</ul>
</nav>
<!--小さな端末用（800px以下端末）メニュー-->
<nav id="menubar-s">
	<ul class="inner">
					<% if user_signed_in? %>
						<li><%= link_to "サービス案内", "#" %></li>
						<li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
					<% else %>
						<li><%= link_to "ログイン", new_user_session_path %></li>
						<li><%= link_to "新規登録", new_user_registration_path %></li>
						<li><%= link_to "サービス案内", "#" %></li>
					<% end %>
				</ul>
</nav>

</div>
<!--/inner-->

<div class="contents">
<div class="inner">

<section>
<div class = "user_name">
 <%= current_user.name %> 
 </div>
<h2>現場情報</h2>

<div class="list">
  <div class = "information">
  <h4>作業会社<h4>
    <%= @scene.user.name %>
    <h4>現場名</h4>
    <%= @scene.name %>
    <h4>投稿者名</h4>
    <%= @scene.user_name %>
    <h4>コメント</h4>
    <%= @scene.comment %>
    <h4>写真</h4>
    <div class = "image">
      <% @scene.image.each do |image| %>
        <%= image_tag image %>
      <% end %>
    </div>
  </div>
</div>


